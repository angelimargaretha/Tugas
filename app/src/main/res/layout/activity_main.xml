<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calcultor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATOR"
        android:textColor="	#000000"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
         />
    <EditText
        android:id="@+id/angka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Angka"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_below="@id/calcultor"
        />
    <Button
        android:id="@+id/sin"
        android:text="SIN"
        android:textStyle="bold"
        android:textColor="	#000000"
        android:layout_below="@id/angka"
        android:layout_marginLeft="0dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
         />

    <Button
        android:id="@+id/cos"
        android:text="COS"
        android:layout_below="@id/angka"
        android:textStyle="bold"
        android:textColor="	#000000"
        android:layout_width="80dp"
        android:layout_toRightOf="@id/sin"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/tan"
        android:text="TAN"
        android:textStyle="bold"
        android:textColor="	#000000"
        android:layout_below="@id/angka"
        android:layout_width="80dp"
        android:layout_toRightOf="@id/cos"
        android:layout_height="80dp"
        />

    <Button
       android:id="@+id/csc"
        android:text="CSC"
        android:textStyle="bold"
        android:textColor="	#000000"
        android:layout_below="@id/sin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <Button
        android:id="@+id/sec"
        android:text="SEC"
        android:textStyle="bold"
        android:textColor="	#000000"
        android:layout_below="@id/sin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/csc"
        />

    <Button
        android:id="@+id/cot"
        android:text="COT"
        android:textStyle="bold"
        android:textColor="	#000000"
        android:layout_below="@id/sin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/sec"
        />

    <Button
        android:id="@+id/logaritma"
        android:text="LOGARITMA"
        android:textColor="	#000000"
        android:textStyle="bold"
        android:layout_below="@id/csc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hasil"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30dp"
        android:layout_below="@id/logaritma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>